<div class="container">
  <h1 class="text-center"><%= @restaurant.name %></h1>
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Detail</h2>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><i class="fas fa-map-marker"></i> <%= @restaurant.address %></li>
        <li class="list-group-item"><i class="fas fa-phone"></i> <%= @restaurant.phone_number %></li>
        <li class="list-group-item"><i class="fas fa-envelope"></i> <%= @restaurant.category %></li>
      </ul>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Reviews</h2>
      <ul class="list-group list-group-flush">
        <% @restaurant.reviews.each do |review| %>
          <li class="list-group-item"><i class="fas fa-comments"></i> <%= review.content %> (<%= review.rating %>)</li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
      <%= link_to "Back all restaurants", restaurants_path %> | <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
    </div>
  </div>
</div>
